{
  "name": "@frontmeans/dom-primitives",
  "version": "1.1.0",
  "description": "DOM primitives",
  "keywords": [
    "dom"
  ],
  "homepage": "https://github.com/frontmeans/dom-primitives",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:frontmeans/dom-primitives.git"
  },
  "license": "MIT",
  "author": "Ruslan Lopatin <ruslan.lopatin@gmail.com>",
  "bugs": {
    "url": "https://github.com/frontmeans/dom-primitives/issues"
  },
  "type": "module",
  "main": "./dist/dom-primitives.js",
  "types": "./index.d.ts",
  "exports": "./dist/dom-primitives.js",
  "devDependencies": {
    "@jest/globals": "^28.0.3",
    "@run-z/eslint-config": "^3.0.1",
    "@run-z/rollup-helpers": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "eslint": "^8.14.0",
    "eslint-plugin-jest": "^26.1.5",
    "gh-pages": "^3.2.3",
    "jest": "^28.0.3",
    "jest-environment-jsdom": "^28.0.2",
    "jest-junit": "^13.2.0",
    "jest-mock": "^28.0.2",
    "prettier": "^2.6.2",
    "rollup": "^2.71.1",
    "rollup-plugin-flat-dts": "^1.4.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-typescript2": "^0.31.2",
    "run-z": "^1.10.0",
    "shx": "^0.3.4",
    "ts-jest": "^28.0.0",
    "tslib": "^2.4.0",
    "typedoc": "^0.22.15",
    "typescript": "^4.6.4"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@types/node"
      ]
    }
  },
  "scripts": {
    "all": "run-z build,lint,test",
    "build": "run-z +z --then rollup -c",
    "ci:all": "run-z all +test/--ci/--runInBand",
    "clean": "run-z +z --then shx rm -rf \"index.d.ts?(.map)\" dist target",
    "doc": "run-z +z --then typedoc",
    "doc:publish": "run-z doc --then gh-pages --dist target/typedoc --dotfiles",
    "lint": "run-z +z --then eslint .",
    "format": "run-z +z --then prettier --write \"**/*.{json,md}\"",
    "test": "run-z +z env:NODE_OPTIONS=\"--experimental-vm-modules --no-warnings\" --then jest",
    "z": "run-z +cmd:rollup,+cmd:typedoc,+cmd:eslint,+cmd:jest"
  }
}
